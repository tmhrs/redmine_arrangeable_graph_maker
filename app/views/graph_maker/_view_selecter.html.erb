<%= select_tag(:target_month,
               options_for_select( @months.collect { |month|
                                     [month.strftime('%Y年%m月'),
                                     url_for(:controller => 'graph_maker',
                                             :action => 'show_trend',
                                             :project_id => @project.identifier,
                                             :target_month => month.strftime('%Y/%m/%d'))]
                                   }, url_for(:controller => 'graph_maker',
                                              :action => 'show_trend',
                                              :project_id => @project.identifier,
                                              :target_month => @target_month.strftime('%Y/%m/%d'))),
               :onchange => 'if (this.value != \'\') { window.location = this.value; }' ) %>
